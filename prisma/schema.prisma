generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model VocRaw {
  sourceId          String   @id @map("source_id") @db.VarChar(255)
  consultingDate    DateTime @map("consulting_date")
  clientGender      String   @map("client_gender") @db.VarChar(10) // "남자", "여자"
  clientAge         Int      @map("client_age") // 연령대 (20, 30, 40, 50, 60)
  consultingTurns   Int      @map("consulting_turns")
  consultingLength  Int      @map("consulting_length")
  consultingContent String   @map("consulting_content") @db.Text
  // consulting_time 필드 제거 (문제 있는 데이터로 인해)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@map("voc_raw")
}